---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { label: 'Design Services', href: '/services/design' },
  { label: 'Schematic Capture', href: '/services/schematic' },
  { label: 'PCB Layout', href: '/services/pcb' },
  { label: 'EMC Compliance', href: '/services/emc' },
  { label: 'Design for X', href: '/services/dfx' },
];

const companyLinks = [
  { label: 'About Us', href: '/about' },
  { label: 'Contact', href: '/contact' },
  { label: 'Careers', href: '/careers' },
  { label: 'News', href: '/blog' },
];
---

<footer class="bg-gradient-to-b from-navy to-black text-white mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Brand & Description -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-4">
          <img src="/images/Website_logo.png" alt="ntronIQ" class="h-10 w-auto">
        </a>
        <p class="text-gray-400 text-sm leading-relaxed">
          Expert PCB electronic design services. From concept to production-ready designs.
        </p>
      </div>

      <!-- Services -->
      <div>
        <h4 class="text-gold font-semibold mb-4">Services</h4>
        <ul class="space-y-2">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-pink transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="text-gold font-semibold mb-4">Company</h4>
        <ul class="space-y-2">
          {companyLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-pink transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact & Location -->
      <div>
        <h4 class="text-gold font-semibold mb-4">Get in Touch</h4>
        <div class="space-y-3 text-sm">
          <a href="mailto:info@ntronIQ.com" class="flex items-center text-gray-400 hover:text-pink transition-colors">
            <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            info@ntronIQ.com
          </a>
          <div class="flex items-start text-gray-400">
            <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>West Midlands, UK</span>
          </div>
          <!-- LinkedIn -->
          <a href="https://www.linkedin.com/company/ntroniq" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-gray-400 hover:text-pink transition-colors mt-2">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-500 text-sm">
          &copy; {currentYear} ntronIQ. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href="/about" class="text-gray-500 hover:text-pink transition-colors">
            Legal notices
          </a>
          <a href="/apps/emergency-light-tester" class="text-gray-500 hover:text-pink transition-colors">
            Apps
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
