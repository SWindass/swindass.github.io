};

const iconPath = icons[icon] || icons.circuit;
---

<a
  href={href}
  class="group block bg-navy text-white rounded-xl p-6 shadow-lg hover:bg-pink hover:text-navy transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
>
  <div class="flex flex-col items-center text-center">
    <div class="w-14 h-14 rounded-full bg-pink/20 flex items-center justify-center mb-4 group-hover:bg-navy/20 transition-colors">
      <svg class="w-7 h-7 text-pink group-hover:text-navy transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={iconPath} />
      </svg>
    </div>
    <h3 class="text-lg font-bold">{title}</h3>
  </div>
</a>
