---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You">
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="reveal text-4xl font-bold text-navy mb-4">Thank you for your request</h1>

      <div class="reveal">
        <h2 class="text-2xl text-navy mb-4">Your details have been submitted</h2>
        <p class="text-xl text-gray-600 mb-8">We will get back to you shortly</p>

        <a
          href="/"
          class="inline-block bg-navy text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-pink hover:text-navy transition-colors"
        >
          Return Home
        </a>
      </div>
    </div>
  </section>
</Layout>
