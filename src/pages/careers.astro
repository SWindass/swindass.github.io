---
import Layout from '../layouts/Layout.astro';

const jobs = [
  'PCB Layout Engineer',
  'Hardware Design Engineer'
];
---

<Layout title="Careers">
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="reveal text-4xl font-bold text-navy mb-8">PCB Electronic Design Careers</h1>

      <div class="reveal">
        <h2 class="text-2xl font-bold text-navy mb-6">Jobs</h2>

        <ul class="space-y-3 mb-12">
          {jobs.map((job) => (
            <li class="text-lg text-navy flex items-center">
              <span class="text-pink mr-3">&#8226;</span> {job}
            </li>
          ))}
        </ul>

        <p class="text-lg text-gray-600">
          Interested in joining our team? <a href="/contact" class="text-pink hover:text-pink-light font-medium">Contact us</a> with your CV.
        </p>
      </div>
    </div>
  </section>
</Layout>
